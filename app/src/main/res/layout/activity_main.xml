<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context="com.jtsai.burningbridges.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="60dp">

        <Button
            android:id="@+id/main_play_local_btn"
            android:text="@string/main_play_local_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorText"
            android:background="@color/colorLocalPlay"/>

        <Button
            android:id="@+id/main_play_online_btn"
            android:text="@string/main_play_online_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorText"
            android:background="@color/colorOnlinePlay"/>
        <TextView
            android:text="@string/main_coming_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/main_play_online_hc_btn"
            android:text="@string/main_play_online_hc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorText"
            android:background="@color/colorOnlineHCPlay"/>
        <TextView
            android:text="@string/main_coming_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"/>
    </LinearLayout>

</RelativeLayout>
